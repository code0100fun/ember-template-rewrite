{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "ember-template-rewrite/*": [
        "./src/*"
      ],
      "test": [
        "./test/*"
      ]
    },
    "target": "es6",
    "module": "commonjs",
    "removeComments": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./"
  ]
}

