{
  "name": "ember-template-rewrite",
  "version": "0.0.4",
  "description": "A utility for automatically refactoring Ember.js templates.",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/q2ebanking/ember-template-rewrite"
  },
  "scripts": {
    "lint": "tslint --project tsconfig.json",
    "build": "webpack && cross-env NODE_ENV=production webpack",
    "test": "npm run lint && npm run spec",
    "spec": "mocha-webpack",
    "tdd": "mocha-webpack --watch",
    "cover": "cross-env NODE_ENV=coverage nyc --reporter=lcov --extendon=.ts --reporter=text npm run spec",
    "coverCI": "nyc npm run cover && nyc report --reporter=text-lcov | coveralls"
  },
  "nyc": {
    "check-coverage": true,
    "all": true,
    "extension": [
      ".js",
      ".ts"
    ],
    "include": [
      "src/**/*.[tj]s"
    ]
  },
  "author": "Chase McCarthy",
  "license": "Apache-2.0",
  "bin": {
    "ember-template-rewrite": "bin/ember-template-rewrite.js"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.44",
    "@types/node": "^8.0.51",
    "assert-diff": "^1.1.0",
    "awesome-typescript-loader": "^3.3.0",
    "babel-core": "^6.0.0",
    "babel-loader": "^6.0.0",
    "babel-preset-env": "^1.6.1",
    "coveralls": "^2.13.0",
    "cross-env": "^5.1.1",
    "istanbul-instrumenter-loader": "^3.0.0",
    "json-loader": "^0.5.7",
    "mocha": "^3.2.0",
    "mocha-webpack": "^1.0.1",
    "ncp": "^2.0.0",
    "nyc": "^10.2.0",
    "pegjs-loader": "^0.5.4",
    "raw-loader": "^0.5.1",
    "ts-loader": "^3.1.1",
    "ts-node": "^3.3.0",
    "tsconfig-paths": "^2.3.0",
    "tslint": "^5.8.0",
    "tslint-loader": "^3.5.3",
    "typescript": "^2.6.1",
    "uglifyjs-webpack-plugin": "^1.0.1",
    "webpack": "^3.8.1",
    "webpack-node-externals": "^1.6.0"
  },
  "dependencies": {
    "broccoli": "^1.1.0",
    "broccoli-funnel": "^1.1.0",
    "broccoli-filter": "^1.2.4",
    "broccoli-plugin": "^1.3.0",
    "commander": "^2.9.0",
    "deepmerge": "^1.3.1",
    "fs-extra": "^2.0.0",
    "glimmer-engine": "^0.19.3",
    "object.entries": "^1.0.4",
    "object.values": "^1.0.4",
    "pegjs": "^0.10.0",
    "underscore": "^1.8.3"
  }
}
