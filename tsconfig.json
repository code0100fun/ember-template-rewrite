{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "ember-template-rewrite/*": [
        "./lib/*"
      ]
    },
    "lib": ["es6", "es2017.object"],
    "module": "commonjs",
    "removeComments": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true
  },
  "include": [
    "lib/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}

