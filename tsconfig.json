{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "ember-template-rewrite/*": [
        "./lib/*"
      ]
    },
    "lib": ["es6", "es2017.object"],
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true
  },
  "include": [
    "lib/**/*",
    "test/**/*"
    ],
    "exclude": [
      "node_modules"
    ]
}

